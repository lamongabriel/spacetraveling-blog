{
  "id": "posts",
  "label": "posts",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "slug",
          "placeholder": ""
        }
      },
      "title": {
        "type": "StructuredText",
        "config": {
          "label": "title",
          "placeholder": "Título do post",
          "allowTargetBlank": true,
          "single": "heading1"
        }
      },
      "subtitle": {
        "type": "StructuredText",
        "config": {
          "label": "subtitle",
          "placeholder": "Subtítulo do post",
          "allowTargetBlank": false,
          "single": "heading3"
        }
      },
      "author": {
        "type": "StructuredText",
        "config": {
          "label": "author",
          "placeholder": "Nome do autor",
          "allowTargetBlank": false,
          "single": "paragraph"
        }
      },
      "banner": {
        "type": "Image",
        "config": {
          "label": "banner",
          "constraint": {},
          "thumbnails": []
        }
      },
      "content": {
        "type": "Group",
        "config": {
          "label": "content",
          "fields": {
            "heading": {
              "type": "StructuredText",
              "config": {
                "label": "heading",
                "placeholder": "Título da sessão",
                "allowTargetBlank": true,
                "single": "heading2"
              }
            },
            "body": {
              "type": "StructuredText",
              "config": {
                "label": "body",
                "placeholder": "Texto da sessão",
                "allowTargetBlank": true,
                "multi": "paragraph,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
              }
            }
          }
        }
      }
    }
  }
}